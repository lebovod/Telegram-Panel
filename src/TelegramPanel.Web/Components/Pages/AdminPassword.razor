@page "/admin/password"
@inject TelegramPanel.Web.Services.AdminCredentialStore CredentialStore
@inject ISnackbar Snackbar
@inject NavigationManager Navigation
@using TelegramPanel.Web.Services

<PageTitle>修改密码 - Telegram Panel</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">修改后台密码</MudText>

<MudCard>
    <MudCardContent>
        @if (!CredentialStore.Enabled)
        {
            <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined">
                后台验证未启用
            </MudAlert>
        }
        else
        {
            @if (CredentialStore.MustChangePassword)
            {
                <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined" Dense="true" Class="mb-3">
                    当前仍为初始密码，为安全起见请立即修改。
                </MudAlert>
            }

            <MudText Typo="Typo.body2" Class="mb-2">当前账号：<strong>@CredentialStore.Username</strong></MudText>

            <MudTextField @bind-Value="currentPassword" Label="当前密码" Variant="Variant.Outlined" InputType="InputType.Password" FullWidth="true" />
            <MudTextField @bind-Value="newPassword" Label="新密码" Variant="Variant.Outlined" InputType="InputType.Password" FullWidth="true" Class="mt-3" />
            <MudTextField @bind-Value="confirmPassword" Label="确认新密码" Variant="Variant.Outlined" InputType="InputType.Password" FullWidth="true" Class="mt-3" />
        }
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@saving" OnClick="Save">
            @if (saving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                <span>保存中...</span>
            }
            else
            {
                <span>保存</span>
            }
        </MudButton>
    </MudCardActions>
</MudCard>

@code
{
    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    private string currentPassword = "";
    private string newPassword = "";
    private string confirmPassword = "";
    private bool saving;

    protected override async Task OnInitializedAsync()
    {
        await CredentialStore.EnsureInitializedAsync();
    }

    private async Task Save()
    {
        if (!CredentialStore.Enabled)
        {
            Snackbar.Add("后台验证未启用", Severity.Warning);
            return;
        }

        if (saving)
            return;

        if (string.IsNullOrWhiteSpace(currentPassword))
        {
            Snackbar.Add("请输入当前密码", Severity.Warning);
            return;
        }

        if (string.IsNullOrWhiteSpace(newPassword) || newPassword.Trim().Length < 6)
        {
            Snackbar.Add("新密码至少 6 位", Severity.Warning);
            return;
        }

        if (!string.Equals(newPassword, confirmPassword, StringComparison.Ordinal))
        {
            Snackbar.Add("两次输入的新密码不一致", Severity.Warning);
            return;
        }

        saving = true;
        try
        {
            await CredentialStore.ChangePasswordAsync(currentPassword, newPassword);
            currentPassword = "";
            newPassword = "";
            confirmPassword = "";
            Snackbar.Add("密码已更新", Severity.Success);

            var target = AdminAuthHelpers.IsLocalReturnUrl(ReturnUrl) ? ReturnUrl! : "/";
            Navigation.NavigateTo(target);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"保存失败：{ex.Message}", Severity.Error);
        }
        finally
        {
            saving = false;
        }
    }
}
